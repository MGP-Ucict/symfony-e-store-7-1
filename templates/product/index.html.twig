{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header"> <h3>Продукти</h3></div>

                <div class="card-body">
					{% for product in pagination %}
						<div class="row mb-10">
							<div class="col-3 col-sm-2">
								#{{ product.id }}
							</div>
							<div class="col-3 col-sm-2">
								{{ product.nameBg }}
							</div>
							<div class="col-3 col-sm-2">
								{{ product.colorBg }}
							</div>
							<div class="col-3 col-sm-2">
								{{ product.price }}
							</div>
							<div class="col-3 col-sm-2">
								<a class="btn btn-primary mb-5" href="/product/{{product.id}}">Детайли</a>
							</div>
						</div>
					{% endfor %}

					{# display navigation #}
					<div class="navigation">
						{{ knp_pagination_render(pagination) }}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>	
{% endblock %}
